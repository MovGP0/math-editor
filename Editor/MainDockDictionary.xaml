    <Style x:Key="UndoButton" TargetType="Button">
        <Setter Property="Content">
            <Setter.Value>
                <Image Source="images\gui\undo.png" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Content">
                    <Setter.Value>
                        <Image Source="images\gui\undo.png">
                            <Image.Effect>
                                <c:GrayscaleEffect />
                            </Image.Effect>
                        </Image>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
